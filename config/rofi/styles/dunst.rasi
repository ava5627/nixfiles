@import ../colors.rasi

* {
    background-color: @background;
    text-color: @foreground;
    spacing: 5;
    width: 15%;
    // height: 50%;
    border-color: @accent;
}

configuration {
    location: 2;
}

window {
    border: 1px 1px 1px 1px;
}

inputbar {
    enabled: false;
}

listview {
    cycle: true;
    padding: 1% 0.5% 1% 0.75%;
    cycle: false;
    dynamic: true;
    fixed-height: false;
    layout: vertical;
}

element {
    padding: 8px;
}

element selected {
    border: 1px 1px 1px 1px;
    text-color: #15161E;
}


